@using CRM.Models;
@model IEnumerable<Application>

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/style1.css" />
    <link rel="stylesheet" href="~/css/style2.css" />
</head>

<header class="header4">
    <div class="conteiner6">
        <div class="header__inner3">
            <div class="header__logo3">CRM - проект</div>
        </div>
    </div>
</header>

<div class="intro6">

</div>

<div class="kek">
    <nav>
        <a class="nav__link1" asp-controller="Worker" asp-action="Index">Рабочий стол</a>
        <a class="nav__link1" asp-controller="Worker" asp-action="Index">Главная</a>
        <a class="nav__link1" asp-controller="Worker" asp-action="Index">Проекты</a>
        <a class="nav__link1" asp-controller="Worker" asp-action="Index">Услуги</a>
        <a class="nav__link1" asp-controller="Worker" asp-action="Index">Блог</a>
    </nav>
</div>

<section class="work__sheet">
    <div action="work__cons">
        <div class="btn_work">
            <a class="btn__click" href="#"> Сегодня</a>
            <a class="btn__click" href="#">Вчера</a>
            <a class="btn__click" href="#">Неделя</a>
            <a class="btn__click" href="#">Месяц</a>
        </div>
    </div>

    <table class="table__content">
        <tr class="table__name">
            <th style="width:150px;">Номер заявки</th>
            <th style="width:150px;">Время заявки</th>
            <th style="width:150px;">Имя</th>
            <th style="width:350px;">Текст заявки</th>
            <th style="width:150px;">Контакты</th>
            <th style="width:150px;">Статус</th>
        </tr>
        @if(Model != null)
        {
            foreach (var note in Model)
            {
                    <tr class="tabble">
                    <th style="width:150px;">@note.Id</th>
                    <th style="width:150px;">@note.Data</th>
                    <th style="width:150px;">@note.Name</th>
                    <th style="width:350px;">@note.Text</th>
                    <th style="width:150px;">@note.Contact</th>
                    <th style="width:150px;">@note.Status</th>
                        <th style="width:150px;"><a class="button" href="#">Изменить статус</a></th>
                    </tr>
            }
        }
    </table>
</section>
